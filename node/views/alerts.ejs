<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
<body>
    <%- include('includes/nav') %>
    <div class="content-with-padding">
        <h2 class="page-title">Incoming Alerts</h2>
        <div class="container">
            <table class="styled-table">
                <thead>
                    <tr>
                        <!-- Table Titles -->
                        <th>Time</th>
                        <th>Phone Number</th>
                        <th>Full Name</th>
                        <th>Message</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% alerts.forEach(alert => { %>
                        <tr>
                            <!-- Table data -->
                            <td><%= new Date(alert.sent_at).toLocaleString() %></td>
                            <td><%= alert.phone_number %></td>
                            <td><%= alert.full_name %></td>
                            <td><%= alert.message %></td>
                            <td>
                                <!-- Send alert method-->
                                <form action="/alerts/send" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="<%= alert.id %>">
                                    <button type="submit" class="button action-button">Send</button>
                                </form>
                                <!-- Delete alert method -->
                                <form action="/alerts/delete" method="post" style="display:inline;">
                                    <input type="hidden" name="id" value="<%= alert.id %>">
                                    <button type="submit" class="button action-button">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('includes/footer') %>
</body>
</html>
